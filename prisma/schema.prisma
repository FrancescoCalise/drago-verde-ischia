generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model AppUser {
  id           String    @id @default(uuid()) @db.Uuid
  username     String    @unique
  password     String
  name         String
  surname      String
  birthdate    DateTime  @db.Date
  email        String    @unique
  role         String?   @default("guest")
  phone_number String?
  created_at   DateTime? @default(now()) @db.Timestamptz(6)
  updated_at   DateTime? @default(now()) @db.Timestamptz(6)
}

model GdrSession {
  id             String   @id @default(uuid())
  title          String
  description    String
  urlImg         String?
  start          DateTime
  end            DateTime
  master         String
  availableSeats Int
  created_at     DateTime? @default(now()) @db.Timestamptz(6)
  updated_at     DateTime? @default(now()) @db.Timestamptz(6)

  bookings       Booking[]
}


model Booking {
  id        String      @id @default(uuid())
  session   GdrSession  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId String

  userId    String      // solo l'id dell'utente
  created_at DateTime?  @default(now()) @db.Timestamptz(6)
  updated_at DateTime?  @default(now()) @db.Timestamptz(6)
}

model MainEvent {
  id           String    @id @default(uuid())
  title        String
  description  String
  urlImg       String?
  start        DateTime
  end          DateTime
  location     String
  price        Float     @default(0) // costo di iscrizione, 0 se gratis
  maxSeats     Int
  created_at   DateTime? @default(now()) @db.Timestamptz(6)
  updated_at   DateTime? @default(now()) @db.Timestamptz(6)
  note       String
  
  // Relazione con iscrizioni
  registrations EventRegistration[]
}

model EventRegistration {
  id         String    @id @default(uuid())
  eventId    String
  userId     String
  created_at DateTime? @default(now()) @db.Timestamptz(6)

  event MainEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model LoggerIDML {
    id         String    @id @default(uuid())
    IDML       String
    description String
    language String
    created_at DateTime?  @default(now()) @db.Timestamptz(6)
    updated_at DateTime?  @default(now()) @db.Timestamptz(6)
    @@unique([IDML, language], name: "IDML_language")
}