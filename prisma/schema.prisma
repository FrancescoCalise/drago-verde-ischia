generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String    @id @default(uuid()) @db.Uuid
  username     String    @unique
  password     String
  name         String
  surname      String
  birthdate    DateTime  @db.Date
  email        String    @unique
  role         String?   @default("guest")
  phone_number String?
  created_at   DateTime? @default(now()) @db.Timestamptz(6)
  updated_at   DateTime? @default(now()) @db.Timestamptz(6)
}

model GdrSession  {
  id             String   @id @default(uuid())
  title          String
  description    String
  urlImg         String
  date           DateTime
  time           String
  master         String
  availableSeats Int
  created_at   DateTime? @default(now()) @db.Timestamptz(6)
  updated_at   DateTime? @default(now()) @db.Timestamptz(6)

  // Relazione con prenotazioni
  bookings       Booking[]
}


model Booking {
  id        String      @id @default(uuid())
  session   GdrSession  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId String

  userId    String      // solo l'id dell'utente
  created_at DateTime?  @default(now()) @db.Timestamptz(6)
  updated_at DateTime?  @default(now()) @db.Timestamptz(6)
}

